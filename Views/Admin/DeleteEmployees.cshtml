@model NGO_Zerohunger.Models.employee

@{
    ViewBag.Title = "DeleteEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Delete Employees</h2>

<h3 style="color:red">Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Employee ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.employee_id)
        </dd>

        <dt>
            @Html.DisplayName("Employee Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.employee_name)
        </dd>

        <dt>
            @Html.DisplayName("Contact Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contact_number)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="form-actions no-color">

            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Employees")
            @Html.ActionLink("Home", "Index")
        </div>
    }
</div>