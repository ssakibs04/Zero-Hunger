@model IEnumerable<NGO_Zerohunger.Models.collection_requests>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dashboard</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Request Date")
        </th>
        <th>
            @Html.DisplayName("Preservation Time")
        </th>
        <th>
            @Html.DisplayName("Restaurant Name")
        </th>
        <th>@Html.DisplayName("Assign")</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.request_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maximum_preservation_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.restaurant.restaurant_name)
        </td>
       
        <td>
            @Html.ActionLink("Assign", "Assign", new { id=item.collection_request_id }) |
      
        </td>
    </tr>
}

</table>
